<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.shape.Rectangle?>
<HBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.bad_walden_stadtwerke.ui.controller.mainApplication.MainApplicationController">
    <VBox prefWidth="270" style="-fx-border-color: black; -fx-border-width: 0 2 0 0;" >
        <TreeView fx:id="sidebarTreeView" VBox.vgrow="ALWAYS" showRoot="false" style="-fx-font-size: 18px; -fx-font-family: 'Arial';" />
        <HBox alignment="BOTTOM_CENTER">
            <Button fx:id="germanButton" text="%languageGerman" onAction="#onButtonDeutschClick" style="-fx-font-size: 14px; -fx-background-color: #ffffff; -fx-text-fill: #000000; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px;" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                <graphic>
                    <ImageView>
                        <Image url="@../images/german-flag.png" requestedHeight="20" requestedWidth="35"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="englishButton" text="%languageEnglish" onAction="#onButtonEnglishClick" style="-fx-font-size: 14px; -fx-background-color: #ffffff; -fx-text-fill: #000000; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px;" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                <graphic>
                    <ImageView>
                        <Image url="@../images/english-flag.png" requestedHeight="20" requestedWidth="35"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
        <Button fx:id="logoutButton"  maxWidth="Infinity" alignment="CENTER" style="-fx-font-size: 18px; -fx-font-family: 'Arial';" />
    </VBox>
    <VBox prefWidth="1010">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label fx:id="welcomeHeadLineLabel" style="-fx-font-size: 86px; -fx-font-family: 'Arial';"/>
        <ImageView fx:id="imageView" fitHeight="500" fitWidth="1000">
            <Image url="@../images/BadWalden2.png" />
            <clip>
                <Rectangle width="1000" height="500" arcWidth="33" arcHeight="33"/>
            </clip>
        </ImageView>
    </VBox>
</HBox>