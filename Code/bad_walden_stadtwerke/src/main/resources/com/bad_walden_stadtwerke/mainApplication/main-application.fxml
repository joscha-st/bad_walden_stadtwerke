        </HBox>
        <Button fx:id="logoutButton"  maxWidth="Infinity" alignment="CENTER" />
    </VBox>
    <VBox prefWidth="1010">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
