<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.bad_walden_stadtwerke.ui.controller.initialSignUp.InitialSignUpControllerStep3" prefWidth="1000" prefHeight="550" stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="%signUpHeadlineLabel" styleClass="title"/>
    <Label text="%signUpHeatingText" styleClass="sub-header"/>
    <TabPane>
        <Tab text="%signUpOthersCheckBox" closable="false">
            <Label text="Lorem Ipsum"/>
        </Tab>
        <Tab text="%signUpGasCheckBox" closable="false">
            <ScrollPane prefHeight="400" fx:id="scrollPaneGas"/>
        </Tab>
        <Tab text="%signUpHeatPumpCheckBox" closable="false">
            <ScrollPane prefHeight="400" fx:id="scrollPaneHeatPump"/>
        </Tab>
    </TabPane>
    <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
        <Button text="%signUpNextButton" onAction="#next" styleClass="button"/>
    </HBox>
</VBox>