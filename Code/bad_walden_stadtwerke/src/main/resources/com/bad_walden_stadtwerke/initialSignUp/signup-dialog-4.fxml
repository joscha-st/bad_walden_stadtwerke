<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.bad_walden_stadtwerke.ui.controller.initialSignUp.InitialSignUpControllerStep4" prefWidth="1000" prefHeight="550" stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="%signUpHeadlineLabel" styleClass="title"/>
    <Label text="%signUpThankYouLabel" styleClass="sub-header"/>
    <Label text="%signUpThankYouText" styleClass="text"/>

    <Label text="%signUpQuestionsText" styleClass="text">
        <padding>
            <Insets top="20.0" />
        </padding>
    </Label>
   <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
        <Button text="%signUpCloseButton" onAction="#close" styleClass="button"/>
    </HBox>
</VBox>