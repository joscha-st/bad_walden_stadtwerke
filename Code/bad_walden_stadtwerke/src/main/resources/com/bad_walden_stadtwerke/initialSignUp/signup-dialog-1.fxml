<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.bad_walden_stadtwerke.ui.controller.initialSignUp.InitialSignUpControllerStep1" prefWidth="1000" prefHeight="550" stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="%signUpHeadlineLabel" styleClass="title"/>
    <Label text="%signUpInvoiceAddressText" styleClass="sub-header"/>
    <GridPane hgap="10" vgap="10">
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="%signUpFirstNameLabel" style="-fx-text-fill: grey;"/>
            <TextField fx:id="firstName"/>
        </VBox>
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Label text="%signUpLastNameLabel" style="-fx-text-fill: grey;"/>
            <TextField fx:id="lastName"/>
        </VBox>
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="2">
            <Label text="%signUpStreetLabel" style="-fx-text-fill: grey;"/>
            <TextField fx:id="street"/>
        </VBox>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="%signUpNumberLabel" style="-fx-text-fill: grey;"/>
            <TextField fx:id="houseNumber"/>
        </VBox>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label text="%signUpPostalCodeLabel" style="-fx-text-fill: grey;"/>
            <TextField fx:id="postalCode"/>
        </VBox>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
            <Label text="%signUpCityLabel" style="-fx-text-fill: grey;"/>
            <TextField fx:id="city"/>
        </VBox>
    </GridPane>
    <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
        <Button text="%signUpNextButton" onAction="#next" styleClass="button"/>
    </HBox>
</VBox>